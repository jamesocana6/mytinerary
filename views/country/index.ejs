<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs")%>
</head>
<body>
    <%- include("../partials/nav.ejs")%>
    <h4>Take a trip!</h4>
    <div class="container center-align">       
        <% for (let country of countries) { %>
            <div class="container card-panel hoverable"> 
                <a href="/countries/<%=country._id%>"><%=country.name%></a>
                <% if (country.reviews.length > 0) { %>
                    Food: <%= countryAvgRating(country)[0] %>
                    Sights: <%= countryAvgRating(country)[1] %>
                    Worth: <%= countryAvgRating(country)[2] %>
                    Overall: <%= countryAvgRating(country)[3] %>
                <% } else { %>
                    No ratings yet! 
                <% } %>
            </div> 
        <% } %>
    </div> 
</body>
</html>